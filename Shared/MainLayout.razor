@inherits LayoutComponentBase
@inject ILocalStorageService LocalStorage
@inject NavigationManager NavigationManager

<MudThemeProvider Theme="customTheme" IsDarkMode="true"/>
<MudDialogProvider />
<MudSnackbarProvider />
<MudPopoverProvider />


<MudLayout>
    <MudAppBar Style="background-color: dimgray; z-index: 100" Elevation="5">
        <MudList Class="d-none d-md-flex justify-content-start" T="string">
            <MudListItem Class="appbar-menu-list"><a href="/technologies" class="appbar-menu">Technologies</a></MudListItem>
            <MudListItem Class="appbar-menu-list"><a href="/capstone" class="appbar-menu">Capstones</a></MudListItem>
            <MudListItem Class="appbar-menu-list"><a href="/generator" class="appbar-menu">Generate</a></MudListItem>
        </MudList>

        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" OnClick="@ToggleDrawer" Edge="Edge.End" Class="d-md-none" />

        <MudContainer Class="d-none d-md-flex justify-content-end">
            <MudIconButton Class="me-2" Icon="@Icons.Custom.Brands.Facebook" Variant="Variant.Outlined" Link="https://www.facebook.com/guillersantos23" Target="_blank" />
            <MudIconButton Class="me-2" Icon="@Icons.Custom.Brands.LinkedIn" Variant="Variant.Outlined" Target="_blank" />
            <MudIconButton Class="me-2" Icon="@Icons.Custom.Brands.GitHub" Variant="Variant.Outlined" Link="https://github.com/guillersantos111" Target="_blank" />
        </MudContainer>
    </MudAppBar>

    <MudDrawer Breakpoint="Breakpoint.None" Class="d-md-none" Style="z-index: 1000" @bind-Open="drawerOpen" Color="Color.Dark" ClipMode="DrawerClipMode.Never" Anchor="Anchor.Right" Elevation="3">
        <MudContainer Class="d-grid gap-4">
            <MudList T="string">
                <MudListItem><a href="/technologies" class="appbar-menu mt-1">Technologies</a></MudListItem>
                <MudListItem><a href="/capstone" class="appbar-menu">Add</a></MudListItem>
                <MudListItem><a href="/generator" class="appbar-menu">Generate</a></MudListItem>
            </MudList>
            <MudContainer>
                <MudIconButton Class="me-2" Icon="@Icons.Custom.Brands.Facebook" Variant="Variant.Outlined" Link="https://www.facebook.com/guillersantos23" Target="_blank" />
                <MudIconButton Class="me-2" Icon="@Icons.Custom.Brands.LinkedIn" Variant="Variant.Outlined" Target="_blank" />
                <MudIconButton Class="me-2" Icon="@Icons.Custom.Brands.GitHub" Variant="Variant.Outlined" Link="https://github.com/guillersantos111" Target="_blank" />
            </MudContainer>
        </MudContainer>
    </MudDrawer>

    <MudMainContent>
        <MudContainer Class="content px-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>



@code {
    private bool drawerOpen = false;

    private void ToggleDrawer()
    {
        drawerOpen = !drawerOpen;
    }

    private MudTheme customTheme = new MudTheme()
    {
            PaletteLight = new PaletteLight()
            {
                Background = "#f0f0f0",
                Surface = "#ffffff",
            },
            PaletteDark = new PaletteDark()
            {
                Background = "#303030",
                Surface = "#424242",
            }
    };
}