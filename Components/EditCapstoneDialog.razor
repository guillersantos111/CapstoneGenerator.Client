@page "/editcapstonedialog"
@inherits EditCapstoneBase


<MudDialog DisableSidePadding = "false">
    <DialogContent>
        <EditForm Model="capstones" OnValidSubmit="Save">
            <MudText Typo="Typo.h5">@((capstones.CapstoneId == 0) ? "Add New Capstone" : "Edit Capstone")</MudText>

            <MudTextField T="string" Label="Title" @bind-Value="capstones.Title" Required="true"></MudTextField>
            <MudTextField T="string" Label="Description" @bind-Value="capstones.Description" Required="true"></MudTextField>
            <MudTextField T="string" Label="Categories" @bind-Value="capstones.Categories" Required="true"></MudTextField>
            <MudTextField T="string" Label="Created By" @bind-Value="capstones.CreatedBy" Required="true"></MudTextField>
            <MudCardActions Class="justify-content-center mt-lg-1">
                <MudButton Class="appbar-menu me-4 w-50" Color="Color.Primary" OnClick="Save" Style="background-color: aliceblue">Save</MudButton>
                <MudButton Class="appbar-menu ms-4 w-50" Color="Color.Secondary" OnClick="Cancel" Style="background-color: aliceblue">Cancel</MudButton>
            </MudCardActions>
        </EditForm>
    </DialogContent>
</MudDialog>